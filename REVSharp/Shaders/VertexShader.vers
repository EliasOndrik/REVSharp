#version 330 core
        
layout (location = 0) in vec3 aPosition;
//layout (location = 1) in vec3 aColor;
layout (location = 1) in vec2 aTexCoo;
//out vec3 farba;
out vec2 texCoo;
        
uniform mat4 model;
uniform mat4 view;
uniform mat4 projection;
        
void main(){
    gl_Position = projection * view * model * vec4(aPosition, 1.0);
    //farba = aColor;
    texCoo = aTexCoo;
}